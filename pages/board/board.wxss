.slide swiper {
	height:400rpx;
}
.slide-image {
	width:100%;
	height:100%;
}

.board {
	display:flex;
	flex-direction:column;
	padding:30rpx;
}
.board-item {
	display:flex;
	flex:1;
	cursor:pointer;
	border:1rpx solid #eee;
	margin-top:20rpx;
	padding:30rpx;
	background-color:white;
}

.board-item image {
	height:40rpx;
	width:40rpx;
}
.board-item text {
	flex:1;
}
.center {
	height: 50px;
	width: 100%;

}
.cen-title {
	font-weight: bold;
	font-size: 1.4em;
	height: 50px;
	line-height: 50px;
	margin-left:30px; 
	display: block;
}
.cen-futitle {
	color:#8B8B83;
	margin-left:30px;
}