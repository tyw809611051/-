<view class="container">
	<view class="slide">
		<swiper indicator-dots="true"
		autoplay="true" interval="5000" duration="1000">
		<block wx:for-items="{{imgUrls}}" wx:key="*this">
		<swiper-item>
		  <image src="{{item}}" class="slide-image" width="355" height="150" mode="aspectFill"/>
		</swiper-item>
		</block>
		</swiper>
	</view>
	<view class="board">
	 <navigator url="../list/list?type=in_theaters&name=正在热映">
		<view class="board-item">
			<text>正在热映</text>
			<image src="../../images/right.png" mode="aspectFill" />
		</view>
	 </navigator>
	 <navigator url="../list/list?type=coming_soon&name=即将上映">
		<view class="board-item">
			<text>即将上映</text>
			<image src="../../images/right.png" mode="aspectFill" />
		</view>
	</navigator>
	<navigator url="../list/list?type=top250&name=TOP250">
		<view class="board-item">
			<text>TOP250</text>
			<image src="../../images/right.png" mode="aspectFill" />
		</view>
	</navigator>
	</view>
</view>